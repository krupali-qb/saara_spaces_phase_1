<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="saara_spaces_models.CustomDashboard">
        <div class="o_container" style="max-height: 100vh; overflow-y: auto; padding: 20px;">
            <center>
                <h1 style="margin: 20px;">Dashboard</h1>
            </center>
            <div style="display: flex; justify-content: space-around; flex-wrap: wrap; gap: 30px;">
                <!-- Pie Chart -->
                <div style="flex: 1 1 45%; max-width: 500px;">
                    <h3 style="text-align: center;">Agency-wise Expenses</h3>
                    <canvas id="agencyPieChart" width="100%" height="200px;"/>
                </div>
                <!-- Line Chart -->
                <div style="flex: 1 1 45%; max-width: 500px;">
                    <h3 style="text-align: center;">Cash Flow</h3>
                    <canvas id="cashFlowChart" style="width: 100%; height: 200px;"/>
                </div>
            </div>
            <div style="display: flex; justify-content: space-around; flex-wrap: wrap; gap: 30px; margin-top: 40px;">
                <!-- Pie Chart -->
                <div style="flex: 1 1 45%; max-width: 500px;">
                    <h3 style="text-align: center;">Project-wise Revenue vs Expense</h3>
                    <canvas id="revenueVsExpenseChart" style="width: 100%; height: 200px;"/>
                </div>
                <div style="flex: 1 1 45%; max-width: 500px;">
                    <h3 style="text-align: center;">Agency Wise Total</h3>
                    <canvas id="agencyPaymentCountChart" style="width: 100%; height: 200px;"/>
                </div>
            </div>
        </div>
    </t>
</templates>
